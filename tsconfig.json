{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "include": [
    "src/**/*",
    "eslint.config.js",
    "app.js"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}